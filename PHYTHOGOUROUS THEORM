#include <stdio.h>
#include <math.h>

int main() 
{
    float a, b, c;
    printf("Enter the length of side a: ");
    scanf("%f", &a);
    printf("Enter the length of side b: ");
    scanf("%f", &b);
    c = sqrt(pow(a, 2) + pow(b, 2));
    printf("The length of the hypotenuse is: %f\n", c);
    return 0;
}
