#include <stdio.h>
struct student 
{
    char name[50];
    int roll_num;
    int marks;
};

int main() 
{
    struct student s;

    printf("Enter student name: ");
    scanf("%s", s.name);

    printf("Enter roll number: ");
    scanf("%d", &s.roll_num);

    printf("Enter marks: ");
    scanf("%d", &s.marks);

    printf("\nStudent Details\n");
    printf("Name: %s\n", s.name);
    printf("Roll Number: %d\n", s.roll_num);
    printf("Marks: %d\n", s.marks);

    return 0;
}
