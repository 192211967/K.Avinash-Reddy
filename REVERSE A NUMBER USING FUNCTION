#include<stdio.h>
void reverse_number()
{
	int n,reverse_number=0,remainder;
	printf("enter the integer : ");
	scanf("%d",&n);
	while(n!=0)
	{
		remainder=n%10;
		reverse_number=reverse_number*10+remainder;
		n/=10;
	}
	printf("reverse number =%d",reverse_number);
	return 0;
}
void main()
{
	reverse_number();
}
